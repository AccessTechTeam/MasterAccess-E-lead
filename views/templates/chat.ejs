<link rel="stylesheet" href="./style/chat.css">
<div class="chat-container">
    <div class="chat-sidebar">
      <div class="user-list">
        <div class="user">
          <div class="avatar">
            <img src="https://via.placeholder.com/50x50" alt="Avatar">
          </div>
          <div class="user-info">
            <div class="username">John Doe</div>
            <div class="last-message">Hey, how's it going?</div>
          </div>
        </div>
        <div class="user">
          <div class="avatar">
            <img src="https://via.placeholder.com/50x50" alt="Avatar">
          </div>
          <div class="user-info">
            <div class="username">Jane Smith</div>
            <div class="last-message">I'm doing well, thanks for asking!</div>
          </div>
        </div>
        <div class="user">
          <div class="avatar">
            <img src="https://via.placeholder.com/50x50" alt="Avatar">
          </div>
          <div class="user-info">
            <div class="username">Bob Johnson</div>
            <div class="last-message">Can we meet up later today?</div>
          </div>
        </div>
      </div>
    </div>
    <div class="chat-main">
      <div class="chat-header">
        <div class="avatar">
          <img src="https://via.placeholder.com/50x50" alt="Avatar">
        </div>
        <div class="username">John Doe</div>
      </div>
      <div class="chat-history">
        <div class="message received">
          <div class="avatar">
            <img src="https://via.placeholder.com/50x50" alt="Avatar">
          </div>
          <div class="text">Hey, how are you?</div>
        </div>
        <div class="message sent">
          <div class="text">I'm good, thanks! How about you?</div>
        </div>
        <div class="message received">
          <div class="avatar">
            <img src="https://via.placeholder.com/50x50" alt="Avatar">
          </div>
          <div class="text">I'm doing well too. What have you been up to?</div>
        </div>
      </div>
      <div class="chat-input">
        <input type="text" placeholder="Type your message here">
        <button>Send</button>
      </div>
    </div>
  </div>
  